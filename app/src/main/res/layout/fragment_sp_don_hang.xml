<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_ground_color"
    tools:context=".sp_DonHangFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donhang"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/timkiem"
                android:background="@drawable/edit_text_rounded_coner"
                android:drawableEnd="@drawable/icon_lookup"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/sp_dh_tablayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:tabSelectedTextColor="@color/primary_color"
            android:contentDescription=" "
            app:tabIconTint="@null"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/primary_color"
            app:tabMode="scrollable"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/sp_dh_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_ground_color"/>
    </LinearLayout>

</FrameLayout>